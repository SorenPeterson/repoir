{
	"extends": "example",
	"plugins": [
		"package-json-organizer",
		"json-schema"
	],
	"rules": {
		"npm-scripts": [
			"build",
			"clean",
			"lint",
			"test"
		],
		"json-schema": [
			{
				"file": "package.json",
				"schema": {
					"definitions": {
						"scripts": {
							"type": "object",
							"properties": {
								"healthcheck": {
									"type": "string",
									"enum": ["npm run lint:out && npm run test"]
								}
							},
							"additionalProperties": true,
							"required": [
								"healthcheck"
							]
						}
					},
					"type": "object",
					"properties": {
						"scripts": {
							"$ref": "#/definitions/scripts"
						}
					},
					"additionalProperties": true,
					"required": [
						"scripts"
					]
				}
			}
		]
	}
}
