{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
    	"jest/globals": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
	"plugins": [
		"jest"
	],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
		"no-unused-vars": [
			"error", { "vars": "all", "args": "none" }
		],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}